//= require bootstrap/bootstrap
//=require select2/select2
//=require select2/select2-bootstrap

@import "mixins.styl"

.gray-body
  background-color #eee

.fixed-top-bar
  padding-top 50px
  margin-top 50px

.form-signin
  max-width 380px
  padding 10px 35px 20px
  margin 100px auto
  background-color rgb(255, 255, 255)
  border solid 1px rgba(0, 0, 0, .1)
  border-radius(2px)
  label
    cursor pointer
    font-weight normal
  input[type="text"]
    margin-top 20px
    margin-bottom -1px
    border-bottom-left-radius 0
    border-bottom-right-radius 0
  input[type="password"]
    margin-bottom 20px
    border-top-left-radius 0
    border-top-right-radius 0
  .form-control
    font-size 15px
    position relative
    z-index 1
    box-sizing(border-box)
    &:focus
      z-index 2

.form-edit
  max-width 480px
  padding 10px 35px 20px
  margin 100px auto
  background-color rgb(255, 255, 255)
  border solid 1px rgba(0, 0, 0, .1)
  border-radius(2px)
  .form-control
    font-size 15px
  #recaptcha_area
    overflow hidden

.form-edit-big
  max-width 450px

.jumbotron-small
  padding 12px
  color lighten(#333, 15%)
  h1
    font-size 24px
  .lead
    font-size 16px

.help-block.error
  color #d9534f !important

.help-block.success
  color #5cb85c !important

.help-block.grey
  color #737373 !important

.table-input
  height 32px
  border-radius 3px
  border 1px solid #ccc
  padding 0 10px

.upload-body
  height 34px
  overflow hidden

#load-form
  overflow hidden
  .progress
    overflow hidden
    top -34px
    position relative
    width 100%
    height 34px
    span
      top 6px
      position relative
      font-size 20px

#map
  border 1px solid lighten(#999, 50%)
  border-radius 3px

.help-text
  margin-top 7px
  font-size 14px
  color #666

.search-input
  position relative
  left -5px
  width 200px
  float right
  @media (max-width 500px)
    margin-top 10px
    float none
    width 100%
    left 0

.search-input-left
  float left

.search-button
  float right

.search-button-left
  float left
  @media (max-width 500px)
    margin-top 10px
    float none