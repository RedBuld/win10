theme_bg_color = rgba(0,0,0,0.85)
theme_bg_color_light = rgba(30,30,30,0.8)

@font-face {
    font-family Win10
    src:url('fonts/w10.eot');
    src:url('fonts/w10.eot') format('embedded-opentype'), url('fonts/w10.ttf') format('truetype'), url('fonts/w10.svg') format('svg');
}

html, body {
	margin 0
	padding 0
	height 100%
	max-height 100%
	width 100%
	overflow hidden
}

body {
	background url('img/1.jpg') 0% 100%
	background-size cover
}

#display {
	margin 0
	padding 0
	display block
	width 100%
	height calc(100% \- 40px)
	
	#open_menu_trigger {
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		z-index 10000
	}
}

#taskbar {
	width 100%
	height 40px
	position absolute
	bottom 0
	left 0
	background theme_bg_color
	z-index 10000
	
	button {
		height 40px
		background transparent
		border none
		outline none
		padding 0
		margin 0
	}
	
	button:hover{
		background rgba(255,255,255,.1)
	}
	
	#menu {
		width 48px
		background-image url('img/start-white.png')
	}
	
	#menu:active {
		background-color rgba(150,150,150,.1)
	}
	
	#menu.open{
		background-image url('img/start-white.png')
		background-color rgba(255,255,255,.2)
	}
	
	#menu_drawer {
		display none
		width 256px
		height 550px
		position absolute
		left 0px
		bottom 40px
		border-top 1px solid rgba(120,120,120,0.5)
		border-right 1px solid rgba(120,120,120,0.5)
		overflow hidden
		animation-name fadeInUpLittle
		animation-timing-function cubic-bezier(0.46, 0.03, 0.52, 0.96)
		transition transform 1s
		animation-delay 0s
		animation-duration .2s
		z-index 10001
		
		.theme_colorize {
			width 100%
			height 100%
			background-color theme_bg_color_light
			position absolute
			top 0
			z-index 2
		}
		
		.theme_bg {
			width 100%
			height 100%
			background url('img/1.jpg') 0% calc(100% + 40px)
			-webkit-filter blur(10px)
			position absolute
			top 0
			z-index 1
			overflow hidden
		}
		
		.menu_list {
			width 250px
			height 100%
			padding 14px 8px 4px 14px
			margin 0
			box-sizing border-box
			position absolute
			z-index 3
			float left
			
			.user {
				height 36px
				margin 14px 8px 0 0
				
				.avatar {
					width 32px
					height 32px
					border-radius 50%
					margin 2px
					float left
				}
				
				.userName {
					line-height 20px
					margin 7px 0 0 7px
					float left
					color #ffffff
					font-family "Segoe UI"
					font-size 12px
				}
			}
			
			.user:hover {
				background rgba(255,255,255,0.1)
			}
		}
		
		::-webkit-scrollbar { /* for Mac OS X support */
	        width: 0;
	    }
	    
	    .menu_scroller {
	    	position absolute
	    	right 0
	    	z-index 3
	    	width calc(100% - 250px)
	    	height 100%
	    	max-height 100%
	    	overflow hidden
	    	
	    	.scrolled {
	    		overflow-y scroll
	    		height 100%
	    		max-height 100%
	    	}
		
			.menu_column {
				float left
				box-sizing border-box
				visibility visible
				animation-delay 0.2s
				animation-duration .3s
				animation-name fadeInUpLittle
				animation-timing-function cubic-bezier(0.46, 0.03, 0.52, 0.96)
				transition 1s
				width 324px
				z-index 3
				padding 17px 2px 0 10px
				
				.group {
					animation-delay 0s
					animation-duration .3s
					animation-name fadeInUpLittle
					visibility visible
				}
				
				.group ~ .group {
					margin-top 1px
				}
				
				.groupName {
					width 260px
					height 32px
					color #ffffff
					font-family "Segoe UI"
					font-size 12px
					background transparent
					margin 0 4px 2px 0px
					box-sizing border-box
					border 2px solid transparent
				}
				
				.groupName:focus, .groupName:active {
					background #ffffff
					padding 5px 9px 7px 8px
					color #000000
					outline none
					margin 1px 0 2px 4px
				}
				
				.groupButton {
					width 48px
					height 32px
					box-sizing border-box
					margin 0 0 2px 0
					opacity 0
					color #ffffff
				}
				
				.groupButton:hover, .groupName:not(:focus):hover ~ .groupButton {
					opacity 1
					background transparent
				}
				
				.menu_switcher {
					width 100px
					height 100px
					margin 2px 0px 2px 4px
					box-sizing border-box
					color #ffffff
				}
				
				.menu_switcher:hover {
					box-sizing border-box
					border 2px solid rgba(255,255,255,0.55)
				}
				
				.theme_switcher {
					width 100px
					height 100px
					margin 2px 0px 2px 4px
					box-sizing border-box
					color #ffffff
				}
				
				.theme_switcher:hover {
					box-sizing border-box
					border 2px solid rgba(255,255,255,0.55)
				}
			}

		}
		
	}
	
	#menu_drawer.active {
		display block
	}
	
	#menu_drawer.wided {
		width 588px
	}
	
	#menu_drawer.wided2 {
		width 912px
	}
	
	#menu_drawer.wided3 {
		width 1236px
	}
	
	#date_n_time{
		width 75px
		height 40px
		margin 0
		padding 0
		border 0
		position absolute
		bottom 0px
		right 5px
		text-align center
		box-sizing border-box
	}
	
	#date_n_time:hover{
		background rgba(255,255,255,.1)
	}
	
	#date_n_time p{
		color white
		margin 2px 0
		padding 0
		font-family "Segoe UI"
		font-size 11.5px
		line-height 16px
	}
	
	#hideall {
		width 5px
		border-left 1px solid rgba(255,255,255,0.5)
		position absolute
		right 0
		bottom 0
	}
}